{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/main.cpp",
                "src/glad.c",
                "-Iinclude",
                "-Llib",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-o",
                "app.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
